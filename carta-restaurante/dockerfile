# Etapa 1: Construcción
FROM node:20-alpine AS build

WORKDIR /app

# Copiamos dependencias del nivel raíz
COPY package*.json ./

# Instalamos dependencias
RUN npm ci

# Instalamos herramientas necesarias (como TypeScript) por si no están incluidas
RUN npm install -g typescript vite

# Copiamos el proyecto React desde la subcarpeta
COPY carta-restaurante/ ./carta-restaurante

# Entramos a la carpeta del proyecto React
WORKDIR /app/carta-restaurante

# Compilamos el frontend
RUN npm run build

# Etapa 2: Servir con Nginx
FROM nginx:1.25-alpine

RUN rm /etc/nginx/conf.d/default.conf
COPY carta-restaurante/nginx.conf /etc/nginx/conf.d/default.conf

# Copiamos el resultado de la build
COPY --from=build /app/carta-restaurante/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
